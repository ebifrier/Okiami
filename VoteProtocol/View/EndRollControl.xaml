<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:l="clr-namespace:VoteSystem.Protocol.View">
    <ControlTemplate x:Key="endRollControl">
        <Grid>
            <Border Name="BackgroundPart" />
            <Canvas Name="TextPanelPart" />
        </Grid>
    </ControlTemplate>
    
    <Style TargetType="l:EndRollControl">
        <Setter Property="Template" Value="{StaticResource endRollControl}" />
        <Setter Property="Background" Value="Transparent" />
    </Style>
</ResourceDictionary>
