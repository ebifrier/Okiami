<UserControl x:Class="VoteSystem.Client.View.Control.CommenterSettingControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:r="http://schemas.garnet-alice.net/ragnarok/xaml/presentation"
             xmlns:l="clr-namespace:VoteSystem.Client"
             xmlns:c="clr-namespace:VoteSystem.Client.Command"
             xmlns:m="clr-namespace:VoteSystem.Client.Model"
             xmlns:vc="clr-namespace:VoteSystem.Client.View.Control"
             xmlns:cm="clr-namespace:System.ComponentModel;assembly=WindowsBase"
             mc:Ignorable="d" 
             d:DesignHeight="395" d:DesignWidth="300">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../CommonDictionary.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <vc:BoolToSignConverter x:Key="boolToSignConverter" />

            <!-- 投稿したコメントリストは時刻順に並べます。-->
            <CollectionViewSource x:Key="postCommentView"
                                  Source="{Binding PostCommentList}">
                <CollectionViewSource.SortDescriptions>
                    <cm:SortDescription PropertyName="Timestamp"
                                        Direction="Descending" />
                </CollectionViewSource.SortDescriptions>
            </CollectionViewSource>

            <Style x:Key="userIdListStyle" TargetType="DataGrid">
                <Setter Property="ItemsSource" Value="{Binding CommenterClientList}" />
                <Setter Property="IsEnabled" Value="True" />
                <Setter Property="Height" Value="100" />
                <Setter Property="SelectionMode" Value="Single" />
                <Setter Property="AutoGenerateColumns" Value="False" />
                <Setter Property="HorizontalScrollBarVisibility" Value="Auto" />
                <Setter Property="VerticalScrollBarVisibility" Value="Auto" />
                <Setter Property="HorizontalGridLinesBrush" Value="#FFAAAAAA" />
                <Setter Property="VerticalGridLinesBrush" Value="#FFAAAAAA" />
                
                <Style.Triggers>
                    <DataTrigger Binding="{Binding NicoLoginName}" Value="{x:Null}">
                        <Setter Property="IsEnabled" Value="False" />
                    </DataTrigger>
                </Style.Triggers>
            </Style>

            <Style x:Key="dataGridColumnStyle" TargetType="FrameworkElement">
                <Setter Property="VerticalAlignment" Value="Center" />
                <Setter Property="HorizontalAlignment" Value="Center" />
            </Style>

            <!-- 中継リストを表示します。-->
            <ControlTemplate x:Key="userIdListTemplate">
                <DataGrid Style="{StaticResource userIdListStyle}">
                    <DataGrid.Columns>
                        <DataGridTextColumn Width="Auto" Header="放送ID" IsReadOnly="True"
                                            Binding="{Binding LiveId}" />
                        <DataGridCheckBoxColumn Width="Auto" Header="中継許可"
                                                Binding="{Binding IsAllowToConnect, Mode=TwoWay,
                                                                  UpdateSourceTrigger=PropertyChanged}"
                                                ElementStyle="{StaticResource dataGridColumnStyle}" />
                        <DataGridTextColumn Width="70" Header="状態" IsReadOnly="True"
                                            Binding="{Binding State}"
                                            ElementStyle="{StaticResource dataGridColumnStyle}" />
                        <DataGridTextColumn Width="Auto" Header="投稿" IsReadOnly="True"
                                            Binding="{Binding IsPostCommentEnabled,
                                                              Converter={StaticResource boolToSignConverter}}"
                                            ElementStyle="{StaticResource dataGridColumnStyle}" />
                        <DataGridTextColumn Width="Auto" Header="視聴" IsReadOnly="True"
                                            Binding="{Binding IsWatching,
                                                              Converter={StaticResource boolToSignConverter}}"
                                            ElementStyle="{StaticResource dataGridColumnStyle}" />
                    </DataGrid.Columns>
                </DataGrid>
            </ControlTemplate>
            
            <!-- ログイン前の名前表示 -->
            <ControlTemplate x:Key="notLoginTemplate">
                <TextBlock>
                    <TextBlock Text="ログイン名:" />
                    <TextBlock VerticalAlignment="Center"
                               Foreground="Gray"
                               Text="ログインしてください m(._.)m" />
                </TextBlock>
            </ControlTemplate>
            
            <!-- ログイン後の名前表示 -->
            <ControlTemplate x:Key="loginedTemplate">
                <TextBlock>
                    <TextBlock Text="ログイン名:" />
                    <Hyperlink NavigateUri="{Binding NicoLoginName}"
                               Command="{x:Static r:RagnarokCommands.NavigateUrl}"
                               CommandParameter="{Binding NicoLoginUserUrl}">
                        <TextBlock Text="{Binding NicoLoginName}" />
                    </Hyperlink>
                </TextBlock>
            </ControlTemplate>
            
            <Style x:Key="loginNameStyle" TargetType="Control">
                <Setter Property="Margin" Value="0,10,0,5" />
                <Setter Property="Template"
                        Value="{StaticResource loginedTemplate}" />
                
                <Style.Triggers>
                    <DataTrigger Binding="{Binding NicoLoginName}" Value="{x:Null}">
                        <Setter Property="Template"
                                Value="{StaticResource notLoginTemplate}" />
                    </DataTrigger>
                </Style.Triggers>
            </Style>
        </ResourceDictionary>
    </UserControl.Resources>

    <ScrollViewer HorizontalScrollBarVisibility="Auto"
                  VerticalScrollBarVisibility="Auto">
        <StackPanel Orientation="Vertical">
            <Control Style="{StaticResource loginNameStyle}" />

            <Separator />
            
            <CheckBox IsChecked="{Binding IsUseAsNicoCommenter}"
                      Content="アカウントをコメント中継に使う"
                      Margin="2,5,2,1" />
        
            <GroupBox Header="コメント中継設定"
                      IsEnabled="{Binding IsUseAsNicoCommenter}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition />
                        <RowDefinition />
                    </Grid.RowDefinitions>
                
                    <CheckBox Grid.Row="0"
                              IsChecked="{Binding IsNicoCommenterAutoStart}"
                              Content="コメント中継を自動的に始める"
                              ToolTip="チェック中は中継が自動的に開始されます。"
                              Margin="0,0,0,8" />

                    <GroupBox Grid.Row="1"
                              Header="中継放送リスト"
                              ToolTip="中継中か中継待ちの放送リストです。">
                        <!-- 中継リスト -->
                        <ContentControl Template="{StaticResource userIdListTemplate}" />
                    </GroupBox>

                    <GroupBox Grid.Row="2"
                              Header="中継したコメント一覧">
                        <ListView ItemsSource="{Binding Source={StaticResource postCommentView}}"
                                  Height="80">
                            <ListView.View>
                                <GridView>
                                    <GridViewColumn Header="放送ID"
                                                    DisplayMemberBinding="{Binding LiveId}" />
                                    <GridViewColumn Header="時刻"
                                                    DisplayMemberBinding="{Binding Timestamp, StringFormat={}{0:HH:mm:ss}}" />
                                    <GridViewColumn Header="コメント"
                                                    DisplayMemberBinding="{Binding Text}" />
                                </GridView>
                            </ListView.View>
                        </ListView>
                    </GroupBox>
                </Grid>
            </GroupBox>

            <Expander Header="コメント中継とは？" IsExpanded="False">
                <GroupBox Padding="0,6,0,0">
                    <TextBlock TextWrapping="Wrap">
ある放送のコメントを他の放送に再投稿します。<LineBreak />
中継用アカウントに設定されると、そのアカウントは<LineBreak />
184でコメントを投稿するようになります。<LineBreak />
<LineBreak />
ニコ生では３秒に一度しかコメントできません。<LineBreak />
中継用のアカウントを複数使うことで<LineBreak />
再投稿のラグを防いでいます。
                    </TextBlock>
                </GroupBox>
            </Expander>
        </StackPanel>
    </ScrollViewer>
</UserControl>
