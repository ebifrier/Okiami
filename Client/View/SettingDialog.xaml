<Window x:Class="VoteSystem.Client.View.SettingDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vc="clr-namespace:VoteSystem.Client.View.Control"
        xmlns:rp="http://schemas.garnet-alice.net/ragnarok/xaml/presentation"
        Title="設定ダイアログ" Height="350" Width="400"
        Topmost="True">
    
    <!-- 投票結果ウィンドウとバッティングする可能性があるため、
         最前面に表示します -->
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        
        <TabControl Grid.Row="0">
            <TabItem Header="システムメッセージ設定">
                <vc:SystemMessageSettingControl />
            </TabItem>
            
            <TabItem Header="秒読み設定">
                <vc:SoundSettingPage />
            </TabItem>            
        </TabControl>

        <StackPanel Grid.Row="1"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right">
            <Button Content="OK" MinWidth="50"
                    Margin="3,3,10,3"
                    Command="{x:Static rp:DialogCommands.OK}" />
            <Button Content="キャンセル"
                    Margin="3,3,3,3"
                    Command="{x:Static rp:DialogCommands.Cancel}" />
        </StackPanel>
    </Grid>
</Window>
