<?xml version="1.0" encoding="UTF-8"?>

<!--http://garnet-alice.net/shogi/tmp/ending_test.wmv -->

<FormatRoot MovieUrl="https://s3-ap-northeast-1.amazonaws.com/ending/ending.wmv"
			MovieExt=".wmv">
	<MovieTimeline FadeInStartTime="00:00:00"
				   FadeInSpan="00:00:10"
				   FadeOutStartTime="00:01:28"
				   FadeOutSpan="00:00:02" />
	<EndRollTimeline FadeInStartTime="00:00:10"
					 FadeInSpan="00:00:00"
					 FadeOutStartTime="00:01:30"
					 FadeOutSpan="00:00:00" />
  <ShogiTimeline FadeInStartTime="00:00:10"
				   FadeInSpan="00:00:05"
				   FadeOutStartTime="00:01:23"
				   FadeOutSpan="00:00:03" />

	<ColumnDefinitions>
		<ColumnDefinition Width="1" />
		<ColumnDefinition Width="1" />
	</ColumnDefinitions>

	<Line>
		<Format ColumnSpan="2" Text="参加者一覧" />
	</Line>

	<Lines Data="$JoinedVoterList">
		<Line>
			<Format Column="0" Text="$Name" Alignment="Right" />
			<Format Column="1" Text="$Skill" Alignment="Left" />
		</Line>
	</Lines>

	<Line />
	<Lines Data="$UnjoinedVoterCount">
		<Line>
			<Format Column="0" Text="その他" Alignment="Right" />
			<Format Column="1" Text="$()人" Alignment="Left" />
		</Line>
	</Lines>
  
	<Line Count="2" />
	<Line>
		<Format ColumnSpan="2" Text="放送主一覧" />
	</Line>

  <!-- 放送主一覧とその人数などを表示 -->
  <Line Count="2" />
  <Line>
    <Format ColumnSpan="2" Text="今日の来場者数など" FontWeight="Bold" />
  </Line>
  <Lines Data="$TotalLiveCountText">
    <Line>
      <Format Column="0" Text="全放送数" Alignment="Right" />
      <Format Column="1" Text="$()" Alignment="Left" />
    </Line>
  </Lines>
  <Lines Data="$TotalLiveVisitorCountText">
    <Line>
      <Format Column="0" Text="来場者数合計" Alignment="Right" />
      <Format Column="1" Text="$()" Alignment="Left" />
    </Line>
  </Lines>
  <Lines Data="$TotalLiveCommentCountText">
    <Line>
      <Format Column="0" Text="コメント数合計" Alignment="Right" />
      <Format Column="1" Text="$()" Alignment="Left" />
    </Line>
  </Lines>
	
	<Line Count="2" />
	<Line>
		<Format ColumnSpan="2" Text="最後までおつきあい頂き" />
	</Line>
	<Line>
		<Format ColumnSpan="2" Text="どうもありがとうございました" />
	 </Line>
</FormatRoot>
