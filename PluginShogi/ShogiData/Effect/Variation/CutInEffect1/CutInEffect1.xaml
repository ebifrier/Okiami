                            <LinearDoubleKeyFrame KeyTime="0:0:0.5" Value="0.9" />
                            <LinearDoubleKeyFrame KeyTime="0:0:1.3" Value="0.9" />
                            <LinearDoubleKeyFrame KeyTime="0:0:1.7" Value="0.0" />
                        </DoubleAnimationUsingKeyFrames>
