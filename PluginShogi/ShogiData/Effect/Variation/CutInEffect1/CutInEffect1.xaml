        <!-- カットイン画像 -->
        <l:EffectObject Coord="{StaticResource backgroundCoord}">
            <l:EffectObject ImageUri="Back.jpg"
                            MaterialType="Diffuse"
                            Duration="0:0:2.0"
                            BaseScale="240,960,1"
                            Color="White">
                <l:EffectObject.Scenario>
                    <p:Scenario>
                        <Vector3DAnimationUsingKeyFrames
                            p:Scenario.TargetProperty="Coord">
                            <LinearVector3DKeyFrame KeyTime="0:0:0.0" Value="0,160,0" />
                            <LinearVector3DKeyFrame KeyTime="0:0:1.7" Value="0,-220,0" />
                        </Vector3DAnimationUsingKeyFrames>
